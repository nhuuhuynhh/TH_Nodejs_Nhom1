<h1><%=data.title%></h1>

<form action="/update_user" method="POST">
    <input type="hidden" name="id" value="<%= data.rows.id %>"> <!-- ID record cần sửa -->
  <div class="mb-3">
      <label for="accountName" class="form-label">username</label>
      <input type="text" name="username" class="form-control" value="<%= data.rows.username %>" id="accountName">
    </div>
  <div class="mb-3">
    <label for="email" class="form-label">password</label>
    <input type="text" name="password" class="form-control" id="email" value="<%= data.rows.password %>">
  </div>
  <div class="mb-3">
    <label for="password" class="form-label">fullname</label>
    <input type="text" name="fullname" class="form-control" value="<%= data.rows.fullname %>">
  </div>
  <div class="mb-3">
      <label for="gender" class="form-label">address</label>
      <input type="text" name="address" class="form-control" id="gender" value="<%= data.rows.address %>">
    </div>

    <div class="mb-3">
      <label for="email" class="form-label">sex</label>
      <input type="number" name="sex" class="form-control" id="email" value="<%= data.rows.sex %>">
    </div>

    <div class="mb-3">
      <label for="email" class="form-label">gmail</label>
      <input type="text" name="gmail" class="form-control" id="email" value="<%= data.rows.gmail %>">
    </div>

    <div class="mb-3">
      <label for="email" class="form-label">groupid</label>
      <input type="text" value="1" hidden name="groupid" class="form-control" id="email">
    </div>
   
  <button type="submit" class="btn btn-primary">Submit</button>
</form>